pipeline {
    agent {
        node {
        label 'AGENT-1'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh """
                        echo "Building"
                    """
                }
                
            }
        }
        stage('Test') {
            steps {
               script {
                    sh """
                        echo "Testing"
                    """
               }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh """
                        echo "Deploying"
                    """
                }
            }
        }
    }
    post{
        always{
            echo 'I will always say hello Again!'
            cleanWs()
        }
        success{
            echo 'I will run if success'
        }
        failure{
            echo 'I will run if failure'
        }
    }
}


